@{
    ViewData["Title"] = "UpdateThreater";
}
<hr />
<h1>Welcome To Update Threater Details Page</h1>
<hr />
<form method="post">
    <div class="form-group">
        <label class="form-label">Threater Name</label>
        <input type="text" class="form-control" asp-for="ThreaterId">
    </div>
    <div class="form-group">
        <label class="form-label">Threater Name</label>
        <input type="text" class="form-control" asp-for="ThreaterName">
    </div>
    <div class="form-group">
        <label class="form-label">Threater Location</label>
        <input type="text" class="form-control" asp-for="ThreaterLocation">
    </div>
    <div class="form-group">
        <label class="form-label">Capacity</label>
        <input type="text" class="form-control" asp-for="ThreaterCapacity">
    </div>
    <button type="submit" class="btn btn-primary" value="UpdateThreater">Update Threater</button>"
    <button type="reset" class="btn btn-secondary">Clear Form</button>
</form>
