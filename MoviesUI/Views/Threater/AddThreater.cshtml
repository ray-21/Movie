@model MovieEntity.Models.ThreaterModel
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860

@{

    ViewData["Title"] = "AddThreater";
}

<h1>AddThreater</h1>

<form method="post">
    <div class="form-group">
        <label class="form-label">Threater Name</label>
        <input type="text" class="form-control" asp-for="ThreaterName">
    </div>
    <div class="form-group">
        <label class="form-label">Threater Location</label>
        <input type="text" class="form-control" asp-for="ThreaterLocation">
    </div>
    <div class="form-group">
        <label class="form-label">Capacity</label>
        <input type="text" class="form-control" asp-for="ThreaterCapacity">
    </div>
    <button type="submit" class="btn btn-primary" value="Register">Register</button>"
    <button type="reset" class="btn btn-secondary">Clear Form</button>

    @if (ViewBag.status == "Success")
    {
        <div class="alert alert-success">
            @ViewBag.message
        </div>
    }
    else
    {
        <div class="alert alert-danger">
            @ViewBag.message
        </div>
    }
</form>