@{
    ViewData["Title"] = "AddMovie";
}

<h1>AddMovie</h1>

<form method="post">
    <div class="form-group">
        <label class="form-label">Movie Title</label>
        <input type="text" class="form-control" asp-for="MovieTitle">
    </div>
    <div class="form-group">
        <label class="form-label">
            Movie Descriptionlabel>
            <input type="text" class="form-control" asp-for="MovieDescription">
    </div>
    <div class="form-group">
        <label class="form-label">Movie Language</label>
        <input type="text" class="form-control" asp-for="MovieLanguage">
    </div>
    <div class="form-group">
        <label class="form-label">Movie Type</label>
        <input type="text" class="form-control" asp-for="MovieType">
    </div>
    <button type="submit" class="btn btn-primary" value="Register">Register</button>"
    <button type="reset" class="btn btn-secondary">Clear Form</button>

    @if (ViewBag.status == "Success")
    {
        <div class="alert alert-success">
            @ViewBag.message
        </div>
    }
    else
    {
        <div class="alert alert-danger">
            @ViewBag.message
        </div>
    }
</form>